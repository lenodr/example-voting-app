pipeline {
    agent any
    tools {
        maven 'Maven 3.8.4'
    }

    stages {
        stage('build') {
            steps {
                echo 'Compile worker app'
                dir('worker') {
                    sh 'mvn compile'
                }
                
            }
        }
        stage('test') {
            steps {
                echo 'Running Unit Tests on Worker app'
                dir('worker') {
                    sh 'mvn clean test'
                }
            }
        }
        stage('package') {
            steps {
                echo 'Packaging worker app'
                dir('worker') {
                    sh 'mvn package'
                }
            }
        }
    }
    post {
        always {
            echo 'Pipline for worker is complete...'
        }
    }
}